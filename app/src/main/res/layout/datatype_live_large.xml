<?xml version="1.0" encoding="utf-8"?>
<!-- Live LARGE: Balance + TE/PS + Time In Zone with visual bars -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="4dp">

    <!-- BALANCE Section (28%) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/label_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:textSize="9sp"
            android:textColor="@color/text_dim" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/balance_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center" />

            <TextView
                android:id="@+id/balance_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="8dp">

            <ProgressBar
                android:id="@+id/balance_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/balance_bar_progress" />
        </FrameLayout>
    </LinearLayout>

    <!-- Divider -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <!-- TE & PS Row (28%) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:orientation="horizontal">

        <!-- TE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/label_te"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/te"
                android:textSize="9sp"
                android:textColor="@color/text_dim" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/te_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="74"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/te_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="76"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center" />
            </LinearLayout>

            <!-- TE Progress bar (0-100, optimal at 70-80) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="2dp">

                <ProgressBar
                    android:id="@+id/te_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="75"
                    android:progressDrawable="@drawable/te_bar_progress" />
            </FrameLayout>
        </LinearLayout>

        <!-- Divider -->
        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <!-- PS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/label_ps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ps"
                android:textSize="9sp"
                android:textColor="@color/text_dim" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/ps_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="22"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/ps_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center" />
            </LinearLayout>

            <!-- PS Progress bar (0-50, optimal at 20+) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="2dp">

                <ProgressBar
                    android:id="@+id/ps_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="50"
                    android:progress="23"
                    android:progressDrawable="@drawable/ps_bar_progress" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <!-- TIME IN ZONE Section (44%) with stacked bar visualization -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="44"
        android:orientation="vertical"
        android:paddingHorizontal="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/label_time_in_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_in_zone"
            android:textSize="9sp"
            android:textColor="@color/text_dim" />

        <!-- Stacked bar for zone distribution -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/zone_bar_optimal"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/zone_optimal_bar" />

            <ProgressBar
                android:id="@+id/zone_bar_attention"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/zone_attention_bar" />

            <ProgressBar
                android:id="@+id/zone_bar_problem"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/zone_problem_bar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Optimal -->
            <TextView
                android:id="@+id/zone_optimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0%"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/status_optimal"
                android:gravity="center" />

            <!-- Attention -->
            <TextView
                android:id="@+id/zone_attention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0%"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/status_attention"
                android:gravity="center" />

            <!-- Problem -->
            <TextView
                android:id="@+id/zone_problem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0%"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/status_problem"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
