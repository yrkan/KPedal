<?xml version="1.0" encoding="utf-8"?>
<!-- BalanceTrend SMALL_WIDE: Balance L|R + Trend indicator horizontal -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/background"
    android:gravity="center"
    android:baselineAligned="false">

    <!-- Label section -->
    <TextView
        android:id="@+id/label_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bal"
        android:textSize="14sp"
        android:textColor="@color/text_dim"
        android:layout_marginEnd="12dp" />

    <!-- Balance values with trend -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/balance_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- Trend indicator (↗ ↘ →) -->
        <TextView
            android:id="@+id/trend_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="→"
            android:textSize="28sp"
            android:textColor="@color/text_dim"
            android:paddingHorizontal="6dp" />

        <TextView
            android:id="@+id/balance_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="52"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />
    </LinearLayout>

</LinearLayout>
