<?xml version="1.0" encoding="utf-8"?>
<!-- Live SMALL: Time in Zone bar + Optimal % -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    android:gravity="center"
    android:baselineAligned="false"
    android:padding="2dp">

    <!-- Label -->
    <TextView
        android:id="@+id/label_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ride"
        android:textSize="10sp"
        android:textColor="@color/text_dim" />

    <!-- Stacked zone bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/zone_bar_optimal"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/zone_optimal_bar" />

        <ProgressBar
            android:id="@+id/zone_bar_attention"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/zone_attention_bar" />

        <ProgressBar
            android:id="@+id/zone_bar_problem"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/zone_problem_bar" />
    </LinearLayout>

    <!-- Optimal zone percentage -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/zone_optimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/status_optimal" />

        <TextView
            android:id="@+id/zone_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="18sp"
            android:textColor="@color/status_optimal"
            android:layout_marginStart="2dp" />
    </LinearLayout>

</LinearLayout>
