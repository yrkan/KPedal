    <string name="question_prefix">Q: %1$s</string>
    <string name="faq_te85_q">TE 85%%+ bad?</string>
    <string name="faq_te85_a">Yes. 70-80%% is optimal. Higher limits downstroke power.</string>
    <string name="faq_balance_q">Balance 45/55 ok?</string>
